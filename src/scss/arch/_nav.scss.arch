nav {
	background: $darkGray;
	
	
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-flow: column nowrap;
		
		
		li {
			display: block;
			padding: 0;
			margin: 0;
			flex: 1 1 auto;
			
			a {
				padding: .5em 1em;
				display: block;
				
			}
		}
	
	@include screen-desktop {
		flex-flow: row nowrap;
		align-items: center;
	}
	
	}
	
}